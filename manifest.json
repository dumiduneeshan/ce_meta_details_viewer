{
    "manifest_version": 3,
    "name": "Meta Details Viewer",
    "version": "1.0",
    "description": "View the meta details of any web page.",
    "permissions": [
        "activeTab",
        "scripting"
    ],
    "action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "icon-16x16.png",
            "48": "icon-48x48.png",
            "128": "icon-128x128.png"
        }
    },
    "icons": {
        "16": "icon-16x16.png",
        "48": "icon-48x48.png",
        "128": "icon-128x128.png"
    },
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "content.js"
            ]
        }
    ]
}